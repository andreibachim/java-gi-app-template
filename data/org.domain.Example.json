{
    "id" : "org.domain.Example",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk"
    ],
    "command" : "/app/bin/example",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--env=JAVA_HOME=/app/jre"
    ],
    "modules" : [
        {
            "name" : "jre",
            "buildsystem" : "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk/install.sh" ]
        },
        {
            "name" : "org.domain.Example",
            "buildsystem" : "simple",
            "build-commands" : [ "gradle installDist" ],
            "build-options" : {
                "append-path": "/usr/lib/sdk/openjdk/gradle/bin:/usr/lib/sdk/openjdk/jvm/openjdk-23/bin"
            },
            "sources" : [
                { "type" : "dir", "path" : ".." },
                "maven-dependencies.json"
            ]
        }
    ]
}
