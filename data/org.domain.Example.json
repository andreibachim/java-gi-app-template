{
    "id" : "org.domain.Example",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "47",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk"
    ],
    "command" : "/app/bin/example",
    "finish-args" : [
        "--device=dri",
        "--socket=wayland",
        "--env=JAVA_HOME=/app/jre"
    ],
    "modules" : [
        {
            "name" : "jre",
            "buildsystem" : "simple",
            "build-commands" : [ "/usr/lib/sdk/openjdk/install.sh" ]
        },
        {
            "name" : "gradle_build",
            "buildsystem" : "simple",
            "build-commands" : [ "gradle install" ],
            "build-options" : {
                "append-path": "/usr/lib/sdk/openjdk/gradle/bin:/usr/lib/sdk/openjdk/jvm/openjdk-23/bin"
            },
        	"sources" : [
                { "type" : "dir", "path" : ".." },
                "maven-dependencies.json"
            ]
        },
        {
        	"name" : "meson_build",
        	"buildsystem" : "meson",
        	"sources" : [
                { "type" : "dir", "path" : ".." }
            ]
        }
    ]
}
